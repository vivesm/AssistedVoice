# AssistedVoice Environment Configuration
# Copy this file to .env and update with your values
# .env is gitignored to keep secrets safe

# Flask Configuration
# Generate a secure secret key with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-this-in-production

# CORS Configuration
# Comma-separated list of allowed origins
# Use "*" for development, specific origins for production
# Examples: http://localhost:3000,https://yourdomain.com
CORS_ALLOWED_ORIGINS=*

# Flask Debug Mode
# Set to False in production for better performance
FLASK_DEBUG=True

# Server Configuration
# Port for the web server
PORT=5001

# Host binding (0.0.0.0 allows external connections, 127.0.0.1 localhost only)
HOST=0.0.0.0

# Brave Search API Key (for web search feature)
# Get your free API key at: https://brave.com/search/api/
BRAVE_API_KEY=your-brave-api-key

# ============================================================================
# Signal Bot Configuration
# ============================================================================

# Signal Bot Phone Number (format: +[country code][number])
# This is the phone number registered with Signal that the bot uses
SIGNAL_NUMBER=+13475332155

# Allowed Users (comma-separated phone numbers that can interact with the bot)
# Format: +[country code][number],+[country code][number]
# Example: +13475332155,+15551234567
ALLOWED_USERS=+13475332155

# Signal API URL (signal-cli-rest-api endpoint)
# Docker: http://signal-api:8080
# Local: http://localhost:8080
SIGNAL_API_URL=http://signal-api:8080

# Signal Data Path (where Signal stores attachments)
# Docker: /home/.local/share/signal-cli/data
# macOS/Linux: /Users/Shared/Server/AssistedVoice/signal_data
SIGNAL_DATA_PATH=/Users/Shared/Server/AssistedVoice/signal_data

# Backend API URL (AssistedVoice web server for model switching and features)
# For distributed setup: http://sagan.local:5001
# For local: http://localhost:5001
BACKEND_URL=http://localhost:5001

# ============================================================================
# Home Assistant Integration (for Signal bot smart home control)
# ============================================================================

# Home Assistant URL (your Home Assistant instance)
# Docker: http://homeassistant:8123
# Local: http://localhost:8123 or http://homeassistant.local:8123
HA_URL=http://homeassistant:8123

# Home Assistant Long-Lived Access Token
# Get from: Profile > Security > Long-Lived Access Tokens
# Required for smart home control via Signal bot
HA_TOKEN=your-home-assistant-long-lived-token-here

# ============================================================================
# SSH Configuration (for Signal bot agent mode remote command execution)
# ============================================================================

# SSH Host User (for remote command execution in agent mode)
# Docker: root
# Other: your username
HOST_USER=root

# SSH Host Address (target host for command execution)
# Docker: host.docker.internal
# Other: sagan.local, localhost, IP address, etc.
HOST_ADDR=host.docker.internal

# ============================================================================
# Video Transcription Helper (for Signal bot video transcription feature)
# ============================================================================

# Path to video transcription helper script
# Update this to match your server's actual path
VIDEO_TRANSCRIBE_HELPER=/home/melvin/server/onlinevideodownloader/transcribe_and_share.py

# ============================================================================
# AI Service API Keys (for Cloud LLM backends)
# ============================================================================

# OpenAI API Key (for GPT models)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Google Gemini API Key (for Gemini models)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# ============================================================================
# Signal Bot Advanced Configuration
# ============================================================================

# Context window size (number of previous messages to include in AI context)
# Default: 20
# Higher values = more context but slower responses
CONTEXT_WINDOW_SIZE=20

# Maximum message length to process (safety limit)
# Default: 4000 characters
MAX_MSG_LEN=4000
